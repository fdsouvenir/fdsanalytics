{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "types/**/*",
    "utils/**/*",
    "errors/**/*",
    "constants/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist",
    "__tests__"
  ]
}
